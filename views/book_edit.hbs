<h1>Edit {{book.title}}</h1>

<form action="/books/edit" method="POST">
    <div class="input-field col s6">
        <input id="title" name="title" type="text" class="validate" required value="{{book.title}}">
        <label for="title">Book`s title</label>
        <span class="helper-text" data-error="Input title"></span>
    </div>

    <div class="input-field col s6">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{book.price}}">
        <label for="price">Book`s price</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>

    <div class="input-field col s6">
        <input id="img" name="img" type="text" class="validate" required value="{{book.img}}">
        <label for="img">Book`s cover URL</label>
        <span class="helper-text" data-error="Input img URL"></span>
    </div>

    <input type="hidden" name="id" value="{{book.id}}">

    <button class="btn btn-primery">Edit book</button>
</form>