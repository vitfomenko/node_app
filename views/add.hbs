<h1>Add book</h1>

<form action="/add" method="POST">
    <div class="input-field col s6">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Book`s title</label>
        <span class="helper-text" data-error="Input title"></span>
    </div>

    <div class="input-field col s6">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Book`s price</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>

    <div class="input-field col s6">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Book`s cover URL</label>
        <span class="helper-text" data-error="Input img URL"></span>
    </div>

    <button class="btn btn-primery">Add book</button>
</form>